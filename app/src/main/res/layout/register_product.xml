                    android:layout_toRightOf="@id/textView135"
                    android:background="@drawable/button"
                    android:backgroundTint="#81DCDCDC"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:paddingLeft="10dp"
