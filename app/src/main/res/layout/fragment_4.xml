<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/framelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp">
                <ImageView
                    android:id="@+id/profile_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/man" />

                <TextView
                    android:id="@+id/textView_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:text="눈송이 님"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.widget.Button
                        android:id="@+id/button5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/setting_button"
                        android:drawableTop="@drawable/edit_profilexml"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:drawablePadding="10dp"
                        android:text="내 정보 변경"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <android.widget.Button
                        android:id="@+id/button8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/listxml"
                        android:background="@drawable/setting_button"
                        android:text="등록 내역"
                        android:drawablePadding="10dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_margin="3dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"/>
                </LinearLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.widget.Button
                        android:id="@+id/button7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/setting_button"
                        android:text="소속 그룹"
                        android:drawablePadding="10dp"
                        android:drawableTop="@drawable/groupxml"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_margin="3dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"/>

                    <android.widget.Button
                        android:id="@+id/btn_logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/setting_button"
                        android:drawableTop="@drawable/logoutxml"
                        android:text="로그아웃"
                        android:drawablePadding="10dp"
                        android:layout_weight="1"
                        android:textColor="#FD0202"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_margin="3dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </LinearLayout>

    </LinearLayout>

</FrameLayout>