<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/fooditemCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFFFF"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/fooditemTextviewstore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="가나분식"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fooditemTextvieworderprice"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_toRightOf="@id/fooditemTextviewstore"
                android:layout_weight="0.8"
                android:background="@drawable/food_button"
                android:gravity="center_horizontal|center_vertical"
                android:text="5,000원"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/fooditemTextviewdeliveryprice"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/fooditemTextvieworderprice"
                android:layout_weight="0.8"
                android:background="@drawable/food_button"
                android:gravity="center"
                android:text="2,000원"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_layout"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView188"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="가나분식"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView189"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/textView188"
                android:background="@drawable/circle_button"
                android:gravity="center"
                android:text="5,000원"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView190"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="false"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/textView189"
                android:background="@drawable/circle_button"
                android:gravity="center"
                android:text="2,000원"
                android:textSize="18sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>