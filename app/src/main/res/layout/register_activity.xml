<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.widget.Button
        android:id="@+id/button32"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/arrow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button32"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextTextPersonName35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/item_chat"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="제목"
            android:inputType="textPersonName"
            android:paddingTop="20dp"
            android:paddingBottom="22dp"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTextPersonName41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/item_chat"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="활동명"
            android:inputType="textPersonName"
            android:paddingTop="20dp"
            android:paddingBottom="22dp"
            android:textSize="20sp"  />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/item_chat"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextTextPersonName36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:background="#ffffffff"
                android:ems="6"
                android:gravity="center_horizontal"
                android:hint="총 인원"
                android:inputType="textPersonName"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView151"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="명 /"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextTextPersonName37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:background="#ffffffff"
                android:ems="6"
                android:gravity="center_horizontal"
                android:hint="총 가격"
                android:inputType="textPersonName"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView152"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원  "
                android:textSize="20sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/editTextTextPersonName39"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/item_chat"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="활동 위치"
            android:inputType="textPersonName"
            android:paddingTop="20dp"
            android:paddingBottom="22dp"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/item_chat"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextTextPersonName40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:background="#ffffffff"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="최소 활동기간"
                android:inputType="textPersonName"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView147"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개월"
                android:textSize="20sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/editTextTextPersonName42"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/item_chat"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="설명"
            android:inputType="textPersonName"
            android:paddingTop="20dp"
            android:paddingBottom="22dp"
            android:textSize="20sp" />

    </LinearLayout>
</RelativeLayout>